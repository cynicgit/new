<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/title"
        android:text="手机防盗" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp" >

        <TextView
            style="@style/content"
            android:layout_alignParentLeft="true"
            android:text="安全号码" />

        <TextView
            android:id="@+id/tv_safe_phone"
            style="@style/content"
            android:layout_alignParentRight="true"
            android:text="55566" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/listview_divider" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp" >

        <TextView
            style="@style/content"
            android:layout_alignParentLeft="true"
            android:text="防盗保护是否开启" />

        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/unlock" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/listview_divider" />
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        >

        <TextView
            style="@style/content"
            android:layout_width="match_parent"
            android:gravity="left"
            android:onClick="reEnter"
            android:clickable="true"
            android:background="@drawable/btn_shape_selector"
            android:text="重新进入设置向导" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/listview_divider" />

    <TextView 
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="功能简介"
        android:background="#5000"
        />
    
    
    <TextView
        android:layout_marginTop="10dp"
        style="@style/content"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:text="GPS追踪:#*location*#" />

    <TextView
        style="@style/content"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:text="播放报警音乐:#*alarm*#" />

    <TextView
        style="@style/content"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:text="远程删除数据:#*wipedata*#" />

    <TextView
        style="@style/content"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:text="远程锁屏:#*lockscreen*#" />
    
    <CheckBox 
        android:id="@+id/cb_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openAdmin"
        android:text="设备管理器已开启"
        />
    
</LinearLayout>