<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cynic="http://schemas.android.com/apk/res/ip.cynic.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <TextView
        style="@style/title" 
        android:text="设置中心"
        />

    <ip.cynic.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	cynic:title="自动更新设置"
    	cynic:desc_on="自动更新已开启"
    	cynic:desc_off="自动更新已关闭"
        />
    
    <ip.cynic.mobilesafe.view.SettingItemView
        android:id="@+id/siv_address_show"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	cynic:title="归属地显示设置"
    	cynic:desc_on="归属地显示已开启"
    	cynic:desc_off="归属地显示已关闭"
        />
    
    <ip.cynic.mobilesafe.view.SettingItemClick
        android:id="@+id/siv_address_style"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        />
    
    <ip.cynic.mobilesafe.view.SettingItemClick
        android:id="@+id/siv_address_location"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        />
</LinearLayout>