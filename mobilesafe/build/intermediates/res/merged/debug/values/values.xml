<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ip.cynic.mobiesafe.view.SettingItemView"><attr format="string" name="title"/><attr format="string" name="desc_on"/><attr format="string" name="desc_off"/></declare-styleable>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <string name="action_settings">Settings</string>
    <string name="app_name">手机卫士</string>
    <string name="hello_world">Hello world</string>
    <string name="sample_device_admin">手机卫士管理器</string>
    <string name="sample_device_admin_description">可以锁屏,清除数据</string>
    <string name="title_activity_app_manager">AppManager</string>
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.



        -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">next</item>
        <item name="android:text">下一步</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/btn_next_previous_selector</item>
        <item name="android:drawableRight">@drawable/next</item>
    </style>
    <style name="previous">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">previous</item>
        <item name="android:text">上一步</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/btn_next_previous_selector</item>
        <item name="android:drawableLeft">@drawable/previous</item>
    </style>
    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">#88ff6600</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>